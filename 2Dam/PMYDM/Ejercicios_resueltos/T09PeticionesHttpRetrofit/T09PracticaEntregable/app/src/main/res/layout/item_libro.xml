<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@drawable/border_layout"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewLibro"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="106dp"
        android:layout_weight="30"
        android:scaleType="fitCenter"
        android:src="@drawable/libro" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="70"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="@string/text_titulo"
            android:textColor="@color/colorPrincipal"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="@dimen/texto"/>
        <TextView
            android:id="@+id/textViewAutor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/text_titulo"
            android:textColor="@color/colorSecundario"
            android:textStyle="italic"
            android:gravity="center"
            android:textSize="@dimen/texto"/>
        <TextView
            android:id="@+id/textViewPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="@string/text_titulo"
            android:textColor="@color/colorPrincipal"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="@dimen/campos"/>
    </LinearLayout>
</LinearLayout>