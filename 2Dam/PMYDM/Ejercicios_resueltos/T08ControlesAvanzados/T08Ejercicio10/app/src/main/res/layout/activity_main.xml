<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">



    <Button
        android:id="@+id/botonDialogoAlerta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="DIÁLOGO ALERTA" />

    <Button
        android:id="@+id/botonDialogoConfirmacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="DIÁLOGO CONFIRMACIÓN" />
    <Button
        android:id="@+id/botonDialogoSeleccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="DIÁLOGO SELECCIÓN" />

    <Button
        android:id="@+id/botonDialogoSeleccion2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="DIÁLOGO SELECCIÓN CON RADIOBUTTON" />

    <Button
        android:id="@+id/botonDialogoSeleccion3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="DIÁLOGO SELECCIÓN CON CHECKBOX" />

    <Button
        android:id="@+id/botonDialogoPersonalizado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="DIÁLOGO PERSONALIZADO" />

</LinearLayout>